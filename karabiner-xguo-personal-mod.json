                {
                  "type": "basic",
                  "from": {
                    "key_code": "s",
                    "modifiers": {
                      "mandatory": ["fn"],
                      "optional": ["any"]
                    }
                  },
                  "to": [
                    {
                      "key_code": "down_arrow"
                    }
                  ]
                },
                {
                  "type": "basic",
