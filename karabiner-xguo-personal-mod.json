    "title": "xguo personal key mod",
    "rules": [
        {
            "description": "fn + wsad to arrows",
            "manipulators": [
                {
                  "type": "basic",
                  "from": {
                    "key_code": "w",
                    "modifiers": {
                      "mandatory": ["fn"],
                      "optional": ["any"]
                    }
                  },
                  "to": [
                    {
                      "key_code": "up_arrow"
                    }
                  ]
                },

                {
                  "type": "basic",
                  "from": {
                    "key_code": "a",
                    "modifiers": {
                      "mandatory": ["fn"],
                      "optional": ["any"]
                    }
                  },
                  "to": [
                    {
                      "key_code": "left_arrow"
                    }
                  ]
